extends base.pug
block content
	.ui.segment
		h1.ui.header.aligned.center 员工信息
		.ui.floating.labeled.icon.dropdown.button
			i.filter.icon
			span.text 全部
			.menu
				.header
					i.tags.icon
					| 选取部门
				.divider
				.item
					| 部门1
				.item
					| 部门2
				.item
					| 部门3
		button.ui.labeled.icon.button.positive.my_add_member
			i.add.user.icon
			|   添加
		a(href='member_detail.html')
			button.ui.right.labeled.icon.button.primary
				i.right.info.icon
				|   查看详细
		.ui.buttons.right.floated
			button.ui.labeled.icon.button.right.floated.my_import
				i.download.icon
				|   导入
			.or
			button.ui.right.labeled.icon.button.my_export.disabled
				i.upload.icon
				|   导出

		table.ui.table.celled#table.line.single.fixed
			thead
				tr.center.aligned
					th
					th 员工工号
					th 姓名
					th 职位
					th 部门
					th 联系方式
					th 操作

			tbody
				- var n=0
				while n < 10
					tr.center.aligned
						td.collapsing
							.ui.fitted.toggle.checkbox
								input.hidden(type='checkbox', tabindex='0')
								label
						td A2345
						td 李旭成
						td 部长
						td 项目部
						td 123456#{n++}
						td
							a.ui.vertical.animated.button.positive.basic.left.floated.my_qrcode
								.hidden.content 二维码
								.visible.content
									i.qrcode.icon
							a.ui.vertical.animated.button.primary.basic.center.floated.my_edit_member
								.hidden.content 编辑
								.visible.content
									i.edit.icon
							a.ui.vertical.animated.button.negative.basic.right.floated.my_remove
								.hidden.content 删除
								.visible.content
									i.remove.user.icon

		.ui.modal.member.large
			//i.close.icon
			.header
				| 新增员工
			.image.content
				.ui.form
					.field
						label 基本属性
						.fields
							.field
								input(type='text' placeholder='姓名')
							.field
								input(type='text' placeholder='民族')
							.field
								input(type='text' placeholder='性别')
							.field
								input(type='number' placeholder='血型')
							.field
								input(type='text' placeholder='出生日期')
					.field
						label 部门属性
						.fields
							.field
								input(type='text' placeholder='工号')
							.field
								input(type='text' placeholder='部门')
							.field
								input(type='number' placeholder='职位')
							.field
								input(type='number' placeholder='身份证')
							.field
								input(type='number' placeholder='联系方式')
					.field
						label 点击图片上传图像
						.ui.move.reveal.my_upload
							.visible.content
								img.ui.small.image(src='https://semantic-ui.qyears.com/images/wireframe/square-image.png')
							.hidden.content
								img.ui.small.image(src='https://semantic-ui.qyears.com/images/avatar/large/steve.jpg')

			.actions
				.ui.black.deny.button
					| 取消
				.ui.positive.right.labeled.icon.button
					| 提交
					i.checkmark.icon
		.ui.modal.edit.large
			//i.close.icon
			.header
				| 编辑员工信息
			.image.content
				.ui.form
					.field
						label 基本属性
						.fields
							.field
								input(type='text' placeholder='姓名' value='李旭成')
							.field
								input(type='text' placeholder='民族')
							.field
								input(type='text' placeholder='性别')
							.field
								input(type='number' placeholder='血型')
							.field
								input(type='text' placeholder='出生日期')
					.field
						label 部门属性
						.fields
							.field
								input(type='text' placeholder='工号')
							.field
								input(type='text' placeholder='部门')
							.field
								input(type='number' placeholder='职位')
							.field
								input(type='number' placeholder='身份证')
							.field
								input(type='number' placeholder='联系方式')
					.field
						label 点击图片上传图像
						.ui.move.reveal.my_upload
							.visible.content
								img.ui.small.image(src='https://semantic-ui.qyears.com/images/wireframe/square-image.png')
							.hidden.content
								img.ui.small.image(src='https://semantic-ui.qyears.com/images/avatar/large/steve.jpg')

			.actions
				.ui.black.deny.button
					| 取消
				.ui.positive.right.labeled.icon.button
					| 提交
					i.checkmark.icon
		.ui.basic.modal.remove
			.ui.icon.header
				i.remove.user.icon
				|  确认删除用户吗?
			.content
				p 该用户的所有信息会清空,重新添加用户时二维码重新生成!
			.actions
				.ui.red.basic.cancel.inverted.button
					i.remove.icon
					|       否
				.ui.green.ok.inverted.button
					i.checkmark.icon
					|       是

		.ui.modal.qrcode.large.basic.icon
			.ui.icon.header
				img(src='https://semantic-ui.qyears.com/images/avatar/large/steve.jpg').icon.my_img
				| 李徐成
			.image.content
				.description
					.ui.vertically.divided.grid(style='margin-left:-4rem')
						.four.column.row
							.column
								p 工号
							.column
								p A123
							.column
								p 头像
							.column
								img(src='https://semantic-ui.qyears.com/images/avatar/large/steve.jpg' style='margin:0 0;').ui.mini.image.rounded.my_img
						.four.column.row
							.column
								p 联系方式
							.column
								p 123456789
							.column
								p 性别
							.column
								p 男
						.four.column.row
							.column
								p 民族
							.column
								p 汉族
							.column
								p 血型
							.column
								p o型
						.four.column.row
							.column
								p 身份证
							.column
								p 6101221111111
							.column
								p 出生日期
							.column
								p 1999.99.99
						.four.column.row
							.column
								p 职位
							.column
								p 部长
							.column
								p 部门
							.column
								p 技术部
			.actions
				.ui.black.deny.button
					| 取消
				.ui.positive.right.labeled.icon.button
					| 下载二维码
					i.checkmark.icon
block script
	script.
		var num = 0
		$ ('.my_add_member').click (function () {$ ('.ui.modal.member').modal ('show')})
		$ ('.my_edit_member').click (function () {$ ('.ui.modal.edit').modal ('show')})
		$ ('.my_qrcode').click (function () {$ ('.ui.modal.qrcode').modal ('show')})
		$ ('.my_remove').click (function () {$ ('.ui.modal.remove').modal ('show')})
		$ ('.ui.dropdown').dropdown ()
		$ ('.checkbox').checkbox ({
			onChecked: function () {
				num++
				if (num > 0) $ ('.my_export').removeClass ('disabled')
			},
			onUnchecked: function () {
				num--
				if (num == 0) $ ('.my_export').addClass ('disabled')
			}
		})