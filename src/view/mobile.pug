doctype html
html
	head
		meta(name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1.0, user-scalable=no")
		meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
		title a
		link(rel='stylesheet' href='../style/semantic.min.css')
		script(src='../javascript/jquery-3.2.1.min.js')
		script(src='../javascript/semantic.min.js')
		style.
			body {
				padding-top: 1px;
			}

			.bg img {
				width: 100vw;
				height: 100vh;
			}

			.bg {
				z-index: -1;
				position: fixed;
			}

			.content {
				padding-top: 1px;
				margin: 10vh 3vw;
				min-height: 80vh;
				border-radius: 10px;
				background: rgba(255, 255, 255, .8);
				padding-bottom: 2rem;
			}

			.content div {
				margin-top: 3rem;
				color: #666;
				text-align: center;
				font-size: 2rem;
				font-family: 'Lato', 'Helvetica Neue', Arial, Helvetica, sans-serif;
				font-weight: lighter;
			}
			.content .name{
				font-weight: bold;
				color: #333;
			}

			.content .avatar img {
				width: 200px;
				border-radius: 30px;
			}

	body
		.bg
			img(src='../static/mobile.jpg')
		.content
			.avatar
				img(src='https://semantic-ui.qyears.com/images/avatar/large/steve.jpg')
