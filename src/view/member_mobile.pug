extends mobile.pug
block link
	style.
		.content {
			padding-top: 1px;
			margin: 5vh 5vw;
			min-height: 80vh;
			border-radius: 10px;
			background: rgba(255, 255, 255, .8);
			padding-bottom: 2rem;
			box-shadow: 1px 1px 5px #abb4bf;
		}
		.content div {
			margin-top: 3rem;
			color: #666;
			text-align: center;
			font-size: 2rem;
			font-family: 'Lato', 'Helvetica Neue', Arial, Helvetica, sans-serif;
			font-weight: lighter;
		}

		.content .name {
			font-weight: bold;
			color: #333;
		}

		.content .avatar img {
			width: 200px;
			border-radius: 30px;
		}

